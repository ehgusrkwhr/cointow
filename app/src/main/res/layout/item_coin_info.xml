<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="10dp"
  >

  <ImageView
    android:id="@+id/iv_coin_icon"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:src="@drawable/ic_launcher_foreground"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
  <TextView
    android:id="@+id/tv_coin_eng_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="bt"
    app:layout_constraintBottom_toTopOf="@+id/tv_coin_kor_name"
    app:layout_constraintStart_toEndOf="@+id/iv_coin_icon"
    app:layout_constraintTop_toTopOf="parent" />
  <TextView
    android:id="@+id/tv_coin_kor_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="비트"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="@id/tv_coin_eng_name"
    app:layout_constraintTop_toBottomOf="@+id/tv_coin_eng_name" />

  <TextView
    android:id="@+id/tv_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="가격"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/guide_price"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_rate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="레이트"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/guide_rate"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_volume"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="볼륨"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/guide_volume"
    app:layout_constraintTop_toTopOf="parent" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guide_rate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.7" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guide_volume"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="1" />
  `
  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guide_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_begin="156dp" />


</androidx.constraintlayout.widget.ConstraintLayout>